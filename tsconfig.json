{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // Path
    "baseUrl": ".",
    "paths": {
      "@base": ["app/packages/base"],
      "@base/*": ["app/packages/base/*"],
      "@list": ["app/packages/list"],
      "@list/*": ["app/packages/list/*"],
      "@common/*": ["app/packages/common/*"],
      "@data-structures/*": ["app/packages/common/data-structures/*"],
      "@utils/*": ["app/packages/common/utils/*"]
    }
  }
}
